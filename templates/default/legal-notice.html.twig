{% extends 'base.html.twig' %}

{% block title %}Mentions légales - {{ website_title }}{% endblock %}

{% block body %}
<section class="page-section mt-5" id="mentions_legales">
    <div class="container">
        <h2 class="page-section-heading text-left text-uppercase text-secondary mb-0">Mentions légales</h2>

        <div class="mt-5">
            {% for post in posts %}
                {% if post.title %}
                    <h3 class="col-12 mx-0 p-0 text-uppercase">{{ post.title|bbcode|raw }}</h3>
                {% endif %}
                {% if post.body %}
                    <p class="col-12 mx-0 p-0">{{ post.body|bbcode|raw }}</p>
                {% endif %}
            {% endfor %}
        </div>

    </div>
</section>
{% endblock %}
