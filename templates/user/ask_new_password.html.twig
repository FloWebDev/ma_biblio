{% extends 'base.html.twig' %}

{% block title %}Inscription - {{ website_title }}{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/viewPassword.css') }}{{ assets_version }}">
{% endblock %}

{% block body %}
<section class="page-section mt-5" id="inscription">
    <div class="container" style="min-height: 50vh;">
        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Mot de passe oubli√©</h2>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'mt-3'}}) }}
        {{ form_row(form.email) }}
        <input type="submit" class="btn btn-primary btn-xl" value="Envoyer">
        {{ form_end(form) }}

</div>
</section>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/viewPassword.js') }}{{ assets_version }}"></script>
{% endblock %}