{% extends 'base.html.twig' %}

{% block title %}Connexion - Biblioth√®que virtuelle{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/viewPassword.css') }}">
{% endblock %}

{% block body %}
<form method="post" class="mx-auto">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {# {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('logout') }}">Logout</a>
        </div>
    {% endif %} #}

    <h1 class="h3 mb-3 font-weight-normal mt-3">Connexion</h1>
    <div class="form-group">
    <label for="inputUsername">Identifiant</label>
        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
    </div>
    
    <div class="form-group">
    <label for="inputPassword">Mot de passe</label>
        <div id="wrapper">
            <input type="password" name="password" id="inputPassword" class="form-control" required>
            <i class="fas fa-eye"></i>
        </div>
    </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-dark mt-2" type="submit">
        Connexion
    </button>
</form>
{% endblock %}

{% block javascripts %}
<script src="{{ asset('assets/js/viewPassword.js') }}"></script>
{% endblock %}
